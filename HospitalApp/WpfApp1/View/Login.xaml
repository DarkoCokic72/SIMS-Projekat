<Window x:Class="WpfApp1.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="Login page" Height="450" Width="600">
    <Grid>
        <Label Content="LOGIN PAGE" HorizontalAlignment="Left" Margin="140,-17,0,0" VerticalAlignment="Top" Width="288" Height="69" FontSize="50"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="225,76,0,0" VerticalAlignment="Top" Width="106" FontSize="30"/>
        <TextBox Name="Email" HorizontalAlignment="Left" Height="43" Margin="152,126,0,0" Text="{Binding EmailBinding}" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" FontSize="25"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="208,174,0,0" VerticalAlignment="Top" Width="151" FontSize="30"/>
        <TextBox Name="LoginPassword" HorizontalAlignment="Left" Height="43" Margin="152,224,0,0" Text="{Binding PasswordBinding}" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" FontSize="25"/>
        <Button Content="LOGIN" HorizontalAlignment="Left" Margin="179,316,0,0" VerticalAlignment="Top" Width="193" Height="61" RenderTransformOrigin="0.78,0.175" FontSize="40" Click="Button_Click"/>

    </Grid>
</Window>
