<Window x:Class="WpfApp1.View.Manager.Equipment.AllEquipment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View.Manager.Equipment"
        mc:Ignorable="d"
        Title="AllEquipment" Height="768" Width="1024" ResizeMode="NoResize">
    <Grid Margin="10,10,3.6,0.4">
        <DataGrid FontSize="40" ColumnWidth="*" CanUserResizeColumns="False" CanUserResizeRows="False" x:Name ="dgEquipment" ItemsSource="{Binding Equipment}" SelectedItem="{Binding SelectedRoom, Mode=TwoWay}" AutoGenerateColumns="False" Margin="18,136,32,58" IsReadOnly="True" RenderTransformOrigin="0.65,0.495">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label FontSize="24" Content="Equipment" HorizontalAlignment="Center" Margin="841,678,32,0" VerticalAlignment="Center" Width="131" Height="50"/>
        <Button Margin="21,15,889,623" Background="White" BorderThickness="0" Click="Button_Click_HomePage">
            <Image Source="/WpfApp1;component/images/home.png" Height="64" Width="64"/>
        </Button>
        <Separator Background="Black" HorizontalAlignment="Left" Height="67" Margin="-26,69,-14,0" VerticalAlignment="Top" Width="1044"/>
        <Button Margin="914,10,-4,628" Background="Transparent" BorderThickness="0" Click="Button_LogOut">
            <Image Source="/WpfApp1;component/images/logout.png" Height="64" Width="64"/>
        </Button>

    </Grid>
</Window>
