<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View.Manager.Equipment"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" xmlns:Validation="clr-namespace:WpfApp1.Validation" x:Class="WpfApp1.View.Manager.Equipment.AllEquipment"
        mc:Ignorable="d"
        Title="AllEquipment" WindowStyle="None" Height="768" Width="1024" ResizeMode="NoResize">
    <Grid>
        <DataGrid FontSize="40" ColumnWidth="*" CanUserResizeColumns="False" CanUserResizeRows="False" x:Name ="dgEquipment" ItemsSource="{Binding Equipment}" AutoGenerateColumns="False" Margin="37,296,37,50" IsReadOnly="True" RenderTransformOrigin="0.65,0.495">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Room" Binding="{Binding Room.Id}"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label FontSize="32" Content="Equipment" HorizontalAlignment="Center" Margin="816,718,37,0" VerticalAlignment="Center" Width="171" Height="50"/>
        <GroupBox BorderThickness="0" BorderBrush="Black" Margin="-9.2,-20,-9.8,624.6" Background="SteelBlue" Width="1043">
            <Grid>
                <Button Width="90" Height="90" Margin="10,63,920.2,0" Background="Transparent" BorderThickness="0" Click="Button_Click_HomePage">
                    <Image Source="/WpfApp1;component/images/home.png" Height="64" Width="64"/>
                </Button>
                <Button Width="90" Height="90" Margin="931,64,10.2,2" Background="Transparent" BorderThickness="0" Click="Button_LogOut">
                    <Image Source="/WpfApp1;component/images/logout.png" Height="64" Width="64"/>
                </Button>
                <Button Width="90" Height="90" Margin="836,66,105.2,0" Background="Transparent" BorderThickness="0">
                    <Image Source="/WpfApp1;component/images/notificationBell.png" Height="64" Width="64"/>
                </Button>
                <Separator BorderBrush="Black" BorderThickness="4" Margin="0,10,0.2,0" Height="97" VerticalAlignment="Top"/>
                <Label FontSize="24" Content="ZdravoHospital" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top"/>
                <Button  BorderThickness="0" Background="Transparent" HorizontalAlignment="Left" Margin="561,66,0,-3" VerticalAlignment="Top" Width="270" Height="93" RenderTransformOrigin="0.5,0.5">
                    <Grid>

                        <Image Source="/WpfApp1;component/images/userr.png" Height="64" Margin="-128,0,65.6,0" RenderTransformOrigin="-0.384,0.4"/>
                        <TextBox IsEnabled="False" FontSize="38" x:Name="User" BorderThickness="0" Background="Transparent" Margin="-59,0,-122.4,0" RenderTransformOrigin="0.5,0.5" />
                    </Grid>
                </Button>

            </Grid>
        </GroupBox>
        <Label FontSize="40" Content="Name:" HorizontalAlignment="Left" Margin="37,193,0,0" VerticalAlignment="Top" Height="61" Width="146"/>
        <TextBox Name="Name" FontSize="40" HorizontalAlignment="Left" Height="61" Margin="188,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233"/>
        <Label FontSize="40" Content="Quantity:" HorizontalAlignment="Left" Margin="426,193,0,0" VerticalAlignment="Top" Height="61" Width="183"/>
        <TextBox Name="Quantity" FontSize="40" HorizontalAlignment="Left" Height="61" Margin="614,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" PreviewTextInput="PreviewTextInput"/>
        <Button Name="SearchBtn" FontSize="40" Height="61" Content="Search" HorizontalAlignment="Left" Margin="849,193,0,0" VerticalAlignment="Top" Width="138" Click="Button_Click_Search" />

    </Grid>
</Window>
