<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="WpfApp1.RoomsWindow"
        mc:Ignorable="d"
        Title="ZdravoHospital" Height="768" Width="1024" ResizeMode="NoResize">

    <Grid Margin="10,10,3.6,0.4">
        <Grid.RowDefinitions>
            <RowDefinition Height="121*"/>
            <RowDefinition Height="121.6"/>
            <RowDefinition Height="122*"/>
            <RowDefinition Height="122*"/>
            <RowDefinition Height="121*"/>
            <RowDefinition Height="122*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="76*"/>
            <ColumnDefinition Width="176*"/>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="251*"/>


        </Grid.ColumnDefinitions>
        <DataGrid FontSize="40" CanUserResizeColumns="False" CanUserResizeRows="False" x:Name ="dgRooms" ItemsSource="{Binding Rooms}" SelectedItem="{Binding SelectedRoom, Mode=TwoWay}" AutoGenerateColumns="False" Margin="18,9.6,19,47" IsReadOnly="True" ColumnWidth="*" RenderTransformOrigin="0.65,0.495" Grid.ColumnSpan="5" Grid.RowSpan="4" Grid.Row="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="120"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Floor" Binding="{Binding Floor}" Width="120"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button FontSize="60" Content="Add" Margin="10,109,17,44.4" Click="Button_Click" Width="Auto" RenderTransformOrigin="-0.528,0.499" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Button FontSize="60" Content="Details" Margin="9.4,109,10,44.4" Click="Button_Click" Grid.Column="4" Width="Auto" Grid.RowSpan="2"/>
        <Button FontSize="60" Content="Edit" Width="Auto" Margin="10,109,18.2,44.4" Click="Button_Click" Grid.Column="2" Grid.RowSpan="2"/>
        <Button FontSize="60" Content="Delete" Grid.Column="3" Width="Auto" Margin="9.8,109,9.6,44.4" Click="Button_Click" RenderTransformOrigin="-0.385,0.632" Grid.RowSpan="2"/>
        <Label FontSize="24" Content="Rooms" Grid.Column="4" HorizontalAlignment="Center" Margin="135.4,80.8,18.6,0.4" Grid.Row="5" VerticalAlignment="Center" Width="97"/>
        <Separator Background="Black" HorizontalAlignment="Left" Height="79" Margin="-26,60,-14,0" VerticalAlignment="Top" Width="1044" Grid.ColumnSpan="5" Grid.RowSpan="2"/>
        <Button Margin="160.4,10,-4,20.8" Background="Transparent" BorderThickness="0" Grid.Column="4" Click="Button_LogOut">
            <Image Source="/WpfApp1;component/images/logout.png" Height="64" Width="64"/>
        </Button>
        <Button Margin="18,10,140,20.8" Background="Transparent" BorderThickness="0" Grid.ColumnSpan="2" Click="Button_Click_HomePage">
            <Image Source="/WpfApp1;component/images/home.png" Height="64" Width="64"/>
        </Button>

    </Grid>



</Window>
