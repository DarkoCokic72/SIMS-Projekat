<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="WpfApp1.RoomsWindow"
        mc:Ignorable="d"
        Title="ZdravoHospital" Height="768" Width="1024" ResizeMode="NoResize">

    <Grid Margin="10,10,3.6,0.4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="76*"/>
            <ColumnDefinition Width="176*"/>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="251*"/>


        </Grid.ColumnDefinitions>
        <DataGrid FontSize="40" CanUserResizeColumns="False" CanUserResizeRows="False" x:Name ="dgRooms" ItemsSource="{Binding Rooms}" SelectedItem="{Binding SelectedRoom, Mode=TwoWay}" AutoGenerateColumns="False" Margin="18,109.8,18.6,47.4" IsReadOnly="True" ColumnWidth="*" RenderTransformOrigin="0.65,0.495" Grid.ColumnSpan="5" Grid.RowSpan="5" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="120"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Floor" Binding="{Binding Floor}" Width="120"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button FontSize="60" Content="Add" Margin="11,93,16,60.2" Click="Button_Click" Width="Auto" RenderTransformOrigin="-0.528,0.499" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Button FontSize="60" Content="Details" Margin="1.4,93,18,60.2" Click="Button_Click" Grid.Column="4" Width="Auto" Grid.RowSpan="2"/>
        <Button FontSize="60" Content="Edit" Width="Auto" Margin="11,93,17.2,60.2" Click="Button_Click" Grid.Column="2" Grid.RowSpan="2"/>
        <Button FontSize="60" Content="Delete" Grid.Column="3" Width="Auto" Margin="9.8,93,9.6,60.2" Click="Button_Click" RenderTransformOrigin="-0.385,0.632" Grid.RowSpan="2"/>
        <Label FontSize="24" Content="Rooms" Grid.Column="4" HorizontalAlignment="Center" Margin="135.4,80.8,18.6,0.4" Grid.Row="5" VerticalAlignment="Center" Width="97"/>
        <Button Margin="21,15,167,44.2" Grid.ColumnSpan="2" Height="64" Width="64" Background="White" BorderThickness="0" Click="Button_Click_HomePage">
            <Image Source="/images/home.png"/>
        </Button>
    </Grid>



</Window>
